<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:background="@drawable/insta_text_logo"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"

        />
    <EditText
        android:id = "@+id/etUsername"
        android:layout_width = "match_parent"
        android:layout_height = "60dp"
        android:inputType = "text"
        android:hint="Username"
        android:drawableLeft="@drawable/user_icon"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:background="@drawable/border_for_text_file"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
       android:layout_marginRight="25dp"
        />
    <EditText
        android:id = "@+id/etPassword"
        android:layout_width = "match_parent"
        android:layout_height = "60dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:padding="10dp"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="15dp"
        android:background="@drawable/border_for_text_file"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <Button
        android:id = "@+id/btnLogin"
        android:layout_width = "match_parent"
        android:layout_height = "55dp"
        android:text = "Log In"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/border_line"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:id="@+id/tvLinkHelpSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgotten your login details? Get help with signing in."
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:textStyle="bold"
        />
    <Button
        android:id = "@+id/btnFacebook"
        android:layout_width = "match_parent"
        android:layout_height = "55dp"
        android:text = "Log in from Facebook"
        android:textColor="#FFFFFFFF"

        android:drawablePadding="15dp"
        android:background="@drawable/border_line"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:id="@+id/tvLinkSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Sign Up"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:textStyle="bold"
        />
</LinearLayout>